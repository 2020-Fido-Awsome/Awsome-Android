<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:layout_marginHorizontal="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ActiveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/greyish_brown"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:text="2020/06/14  " />

        <TextView
            android:id="@+id/txt_ActiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyish_brown"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="1"
            android:text="  19:11:23" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ActiveContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/greyish_brown"
        android:fontFamily="@font/roboto_regular"
        android:text="Super administrator gayeong turned on the 'Command Injection Attack Detection' function." />

</LinearLayout>
